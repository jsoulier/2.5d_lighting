#include <metal_stdlib>
#include <simd/simd.h>

using namespace metal;

struct main0_out
{
    float4 outColor [[color(0)]];
};

struct main0_in
{
    float3 inVelocity [[user(locn0)]];
    float inDensity [[user(locn1)]];
};

fragment main0_out main0(main0_in in [[stage_in]])
{
    main0_out out = {};
    float3 color = abs(in.inVelocity) * 5000.0;
    float alpha = in.inDensity * 100.0;
    out.outColor = float4(color, alpha);
    return out;
}

